{{>main_header}}

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <div class="lhs">
        <h3>cbgm</h3>
        <div>
          <label>nodes (comma separated)</label>
          <input type="text" value="{{want.nodes}}"/>
          <label>keyFunc</label>
          <input type="text" value="{{want.keyFunc}}"/>
          <label>model (masterSlave, multiMaster, etc)</label>
          <input type="text" value="{{want.model}}"/>
          <label>num partitions</label>
          <input type="text" value="{{want.numPartitions}}"/>
          <label>constraints</label>
          <input type="text" value="{{want.constraints}}"/>
          <label>tags (JSON dict string:string)</label>
          <input type="text" value="{{want.tags}}"/>
        </div>
        <button class="btn btn-small" on-click="rebalance">
          rebalance
        </button>
      </div>
    </div>
    <div class="span7">
      <div class="rhs">
        {{>bucketEventsVisual}}
        {{# obj.class != 'bucketEvents' }}
          {{#obj}}{{>__object}}{{/obj}}
        {{/}}
        <pre>
          {{{objJSON}}}
        </pre>
      </div>
    </div>
  </div>
</div>

{{>main_footer}}
