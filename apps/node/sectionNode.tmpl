{{>main_header}}

<div class="container-fluid main">
  <div class="row-fluid">
    <div class="span3">
      <div class="lhs">
        <h1>nodes</h1>
        <input on-change="newNodeCfg" class="newNodeCfg" placeholder="new node names"/>
        <ul>
          {{#nodeCfgs}}
            <li><input type="checkbox" checked="{{.wanted}}"/>
                <a href="#sectionNode:nodeCfg-{{.name}}">{{.name}}</a></li>
          {{/nodeCfgs}}
        </ul>
      </div>
    </div>
    <div class="span7">
      <div class="rhs">
        {{# obj.class == "nodeCfg" }}
          {{#obj}}{{>__object}}{{/obj}}
        {{/}}
        <button class="btn btn-small" on-click="editTask">
          {{ doEdit ? 'cancel edit' : 'edit task' }}
        </button>
      </div>
    </div>
  </div>
</div>

{{>main_footer}}
