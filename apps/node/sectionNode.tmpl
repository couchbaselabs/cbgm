{{>main_header}}

<div class="container-fluid main">
  <div class="row-fluid">
    <div class="span3">
      <div class="lhs">
        <h1>nodes</h1>
        <div>
          <input id="nodeKnown_name"
                 placeholder="new node names"/>
          <input id="nodeKnown_container"
                 placeholder="optional container path"/>
          <input id="nodeKnown_usage"
                 placeholder="optional usage"/>
          <input id="nodeKnown_weight"
                 placeholder="optional weight"/>
          <button class="btn newNodeKnown" on-click="newNodeKnown">
            register nodes
          </button>
        </div>
        {{# nodeUnwantedNames.length > 0 || nodeWantedArr.length > 0 }}
          <div class="subSection">
            nodes not in cluster:
            {{{sectionNodeHierarchy(ctx, "nodeKnown", nodeUnwantedNames, obj)}}}
            <button class="btn" on-click="addNodes">
              add nodes to cluster
            </button>
          </div>
          <div class="subSection">
            nodes in cluster:
            {{{sectionNodeHierarchy(ctx, "nodeWanted", nodeWantedNames, obj)}}}
            <button class="btn" on-click="removeNodes">
              remove nodes from cluster
            </button>
          </div>
        {{/}}
      </div>
    </div>
    <div class="span7">
      <div class="rhs">
        {{#obj}}{{>__object}}{{/obj}}
      </div>
    </div>
  </div>
</div>

{{>main_footer}}
