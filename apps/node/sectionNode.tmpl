{{>main_header}}

<div class="container-fluid main">
  <div class="row-fluid">
    <div class="span3">
      <div class="lhs">
        <h1>nodes</h1>
        <div>
          <input id="nodeKnown_name"
                 placeholder="new node names"/>
          <input id="nodeKnown_container"
                 placeholder="optional container"/>
          <button class="btn" on-click="newNodeKnown">
            register nodes
          </button>
        </div>
        {{# nodeUnwantedNames.length > 0 || nodeWantedArr.length > 0 }}
          <div class="subSection">
            nodes not in cluster:
            <ul>
              {{#nodeUnwantedNames}}
                <li class="{{ 'nodeKnown' == obj.class && . == obj.name && 'current' }}">
                  <input type="checkbox" class="node nodeKnown"
                         id="nodeKnown-{{.}}"/>
                  <a href="#sectionNode:nodeKnown-{{.}}">{{.}}</a>
                </li>
              {{/nodeUnwantedNames}}
            </ul>
            <button class="btn" on-click="addNodes">
              add nodes to cluster
            </button>
          </div>
          <div class="subSection">
            nodes in cluster:
            <ul>
              {{#nodeWantedArr}}
                <li class="{{ .class == obj.class && .name == obj.name && 'current' }}">
                  <input type="checkbox" class="node nodeWanted"
                         id="nodeWanted-{{.name}}"/>
                  <a href="#sectionNode:nodeWanted-{{.name}}">{{.name}}</a>
                </li>
              {{/nodeWantedArr}}
            </ul>
            <button class="btn" on-click="removeNodes">
              remove nodes from cluster
            </button>
          </div>
        {{/}}
      </div>
    </div>
    <div class="span7">
      <div class="rhs">
        {{#obj}}{{>__object}}{{/obj}}
      </div>
    </div>
  </div>
</div>

{{>main_footer}}
